@{
    ViewBag.Title = "ActivateAccount";
    Layout = "";
}
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    var alertMessageFromModel = "@ViewBag.AlertMessage";

    $(document).ready(function () {
        try {
            if (alertMessageFromModel != null && alertMessageFromModel != "") alert(alertMessageFromModel);
            var userAgent = navigator.userAgent;
            window.opener = null;
            window.open("", "_self");
            if (userAgent.indexOf("Firefox") != -1 || userAgent.indexOf("Chrome") != -1) {
                close();//直接呼叫JQUERY close方法關閉
            } else {
                window.opener = null;
                window.open("", "_self");
                window.close();
            }
            window.open('@Url.Action("Login")', "_self");   //沒關成功的就跳回login視窗
        } catch (e) { }
    });
</script>
