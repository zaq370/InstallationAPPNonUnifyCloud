@{
    Layout = "~/Views/Shared/" + @ViewBag.Layout;
}

<div class="container-fluid">
    <br>
    <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 form-align-center">
           @{
                var currentPage = (string)ViewBag.CurrentPage;
            }
            @switch (currentPage)
            {
                case "AccountNotFound":
                    <div class="settingDescritpion alert alert-danger ">
                        <h2 class="text-center"><strong>@ViewBag.BodyTitle</strong></h2>
                        <h3 class="text-center">@ViewBag.AccountNotFoundDesc1</h3>
                    </div>
                        <a href=@Url.Action("EmailUs", "Main") class="btn-custom-outline btn-custom-outline-danger">
                            @ViewBag.AccountNotFoundDesc2
                        </a>
                        <a href=@Url.Action("ForgetPassword","Main") class="btn-custom-outline btn-custom-outline-danger">
                            @ViewBag.AccountNotFoundDesc3
                        </a>
                    <br>
                    break;
                 case "IncompleteInformation":
                    <div class="settingDescritpion alert alert-danger ">
                        <h2 class="text-center"><strong>@ViewBag.BodyTitle</strong></h2>
                        <h3 class="text-center">@ViewBag.IncompleteInformationDesc</h3>
                    </div>
                        <a href=@Url.Action("EmailUs", "Main") class="btn-custom-outline btn-custom-outline-danger">
                            @ViewBag.AccountNotFoundDesc2
                        </a>
                    <br>
                    break;
                case "ResetPasswordSuccessfully":
                    <br />
                    <br />
                    <div class="settingDescritpion alert alert-success ">
                        <h2 class="text-center"><strong>@ViewBag.BodyTitle</strong></h2>
                        <h3 class="text-center">@ViewBag.ResetPasswordSuccessfullyDesc1</h3>
                    </div>
                    <input type="text" readonly value='@ViewBag.Email' style="width:90%;font-size:larger;">
                    <div class="form-align-center">
                        <h3 class="text-center">
                            @ViewBag.ResetPasswordSuccessfullyDesc2
                            <br>
                        </h3>
                        <a href=@Url.Action("EmailUs", "Main") class="btn-custom-outline btn-custom-outline-success">
                            @ViewBag.ResetPasswordSuccessfullyDesc3
                        </a>
                    </div>
                    break;
            }
        </div>
    </div>
    <br>
    <br>
</div>

